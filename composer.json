{
    "name": "seu-usuario/seu-projeto-php", // Troque pelo seu usuário/nome do projeto
    "description": "Projeto PHP básico para aprendizado com GitHub Codespaces.",
    "type": "project",
    "license": "MIT", // Ou outra licença de sua preferência
    "authors": [
        {
            "name": "Seu Nome", // Opcional: Adicione informações do autor
            "email": "seu-email@exemplo.com"
        }
    ],
    "require": {
        "php": "^8.2" // Exige PHP 8.2 ou uma versão mais recente compatível (ex: 8.3, mas não 9.0)
        // Nenhuma dependência externa necessária para o exemplo inicial.
        // Se você fosse usar uma biblioteca, adicionaria aqui. Ex: "monolog/monolog": "^3.0"
    },
    "autoload": {
        // Configuração PSR-4 para carregamento automático de classes.
        // Mesmo que não use classes agora, é bom ter a estrutura.
        // Mapeia o namespace "App" para a pasta "src/".
        // Se seu código PHP principal estiver em outra pasta, ajuste aqui.
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        // Otimizações e preferências comuns do Composer
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable", // Prefere versões estáveis de pacotes
    "prefer-stable": true
}

